<% @form = current_site.contact_forms.new if @form.nil? %>
<%= form_for @form, url:{action: @form.new_record? ? :create : :update}, html:{class: 'validate-forms cama_ajax_request'} do |f| %>
    <input id="plugins_contact_form_models_contact_form_site_id" type="hidden" name="plugins_contact_form_models_contact_form[site_id]" value="<%= current_site.id %>" />
    <%= f.hidden_field :id  %>
    <div class="box-body">
        <div class="form-group">
          <%= f.label t('.name', default: 'Title') %><br>
          <%= f.text_field :name, :class => "form-control required" %>
        </div>
        <div class="form-group">
            <%= f.label t('.slug', default: 'Slug') %><br>
            <%= f.text_field :slug, :class => "form-control slug", "data-parent" => "plugins_cama_contact_form_cama_contact_form_name" %>
        </div>
        <div class="form-group">
          <%= f.label t('.description', default: 'Description') %><br>
          <%= f.text_area :description, :class => "form-control", :rows => 4 %>
        </div>
    </div>

    <div class="box-footer">
      <button class="btn btn-primary pull-right" type="submit"><%= t('.submit_btn', default: 'Create Form') %></button>
    </div>
<% end %>

