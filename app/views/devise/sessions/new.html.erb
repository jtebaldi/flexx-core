<div class="login-box-body">
    <%= render "camaleon_cms/flash_messages" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group has-feedback">
            <%= f.label :username %><br/>
            <%= f.text_field :username, class: "input-lg form-control", autofocus: true %>
        </div>
    
        <div class="form-group has-feedback">
            <%= f.label :password %><br/>
            <%= f.password_field :password, class: "input-lg form-control", autocomplete: "off" %>
        </div>
    
        <% if devise_mapping.rememberable? -%>
            <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            </div>
        <% end -%>
        
        <div class="actions">
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block btn-flat" %>
        </div>
    <% end %>
    
